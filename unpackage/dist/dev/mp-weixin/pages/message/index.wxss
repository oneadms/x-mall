
.room-logo {
  width: 20px;
  height: 20px;
  padding-right: 10px;
}
.content {
  background-color: #e8e8e8;
}
.msg-item {
  display: flex;
  align-items: center;
  background-color: white;
  height: 70px;
  width: 100%;
  border: 1px solid white;
}
.msg-enter {
  position: absolute;
  width: 8px;
  height: 8px;
  right: 0;
  padding-right: 10px;
}
.msg-last-content {
  display: block;
  font-size: 0.5em;
  color: #e8e8e8;
  position: absolute;
  padding-top: 16px;
  left: 0;
}
.msg-item:hover {

  background-color: #e8e8e8;
}

